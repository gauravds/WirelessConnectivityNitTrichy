<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/networkStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Status: "
        android:textSize="18sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/networkDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Details: "
        android:textSize="18sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/signalStrengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signal Strength: "
        android:textSize="18sp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/otherInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Info: "
        android:textSize="18sp"
        android:padding="8dp"/>
</LinearLayout>
